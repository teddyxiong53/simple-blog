<div class="col-md-8 column">
    <div class="col-md-4 column">
    </div>
    <div class="col-md-4 column">

        <form role="form" id="signinForm" method="post" action="/signin">
            <div class="form-group">
                <label for="usernameInput">用户名</label>
                <input class="form-control" id="usernameInput" name="username" type="text" required minlength="3" />
            </div>
            <div class="form-group">
                <label for="userPasswordInput">密码</label>
                <input class="form-control" id="userPasswordInput" type="password" name="password" />
            </div>
            

            <button type="submit" class="btn btn-default">登录</button>
        </form>
    </div>
    <div class="col-md-4 column">
    </div>
</div>
<script>
    $(document).ready(function () {
        $("#signinForm").validate({
            rules: {
                userPasswordInput: {
                    required: true,
                    minlength: 1
                }
            },
            messages: {
                userPasswordInput: {
                    required: '密码不能为空',
                    minlength: '密码长度不能少于6个字符'
                }
            }
        })
    })
</script>
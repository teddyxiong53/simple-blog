
    <div class="col-md-8 column">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        标题
                    </th>
                    <th>
                        作者
                    </th>
                    <th>
                        发表时间
                    </th>
                </tr>
            </thead>
            <tbody>
                <% if (params.data) { %>
                <% params.data.forEach(function(post) { %>
                <tr>
                    <td>
                        <a href="/post/<%= post.id %>"><%= post.title %></a>
                        
                    </td>
                    <td>
                        <%= post.username %>
                    </td>
                    <td>
                        <%= post.createTime %>
                    </td>
                    
                </tr>
                <% }); %>
                <% } %>
            </tbody>
        </table>
    </div>
    
